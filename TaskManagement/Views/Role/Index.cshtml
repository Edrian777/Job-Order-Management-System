@model IEnumerable<TaskManagement.Models.Role>

@{
    ViewData["Title"] = "Roles";
}

<head>
    <link rel="stylesheet" href="~/css/rolepage.css" asp-append-version="true" />
</head>

<h2 class="text-center">Roles</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RoleID" class="btn btn-edit">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RoleID" class="btn btn-details">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RoleID" class="btn btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-create">Create New</a>